<h2 class="title"> RestaurantMe</h2>

<div>
    <img src="/images/restaurant/default-restaurant.png" alt="restaurant">
</div>

<nav>
    <ul class="line">
        <li id="to-center">
            <a href="/signup">Join us</a> <span> | </span>
            <a  href="/login">Login</a> <span> </span>
            {{!-- <form id="logout-form" action="/logout" method="POST">
                <button>Logout</button>
            </form> --}}
        </li>
    </ul>
</nav>

<div class="authform">
    {{!-- <h2>Sign up </h2> --}}
    <form action="/signup" method="POST">

        <label> User name  
            <input type="text" name="name" placeholder="user name" />
        </label>

        <label> Email
            <input type="email" name="email" placeholder="example@restaurantme.com" />
        </label>

        <label> Password
            <input type="password" name="password" placeholder="********" />
        </label>

        <button type="submit">Create account</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>