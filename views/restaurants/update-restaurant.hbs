<h2>update restaurant {{restaurantToEdit.name}} here</h2>
<form class='rest-form' action="/restaurants/{{restaurantToEdit.id}}/update" method="post">
    <label> Name:
        <input type="text" name="name" value="{{restaurantToEdit.name}}" />
    </label>

    <label> Neighborhood:
        <select name="neighborhood">
            <option value="{{restaurantToEdit.neighborhood}}">{{restaurantToEdit.neighborhood}}</option>
            {{#each neighborhood }}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>

    <label> Cuisine:
        <select name="cuisine">
            <option value="{{restaurantToEdit.cuisine}}">{{restaurantToEdit.cuisine}}</option>
            {{#each cuisine }}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>

    <label> Budget:
        <select name="budget">
            <option value="{{restaurantToEdit.budget}}">{{restaurantToEdit.budget}}</option>
            {{#each budget }}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>

    <label> Priority:
        <select name="priority">
            <option value="{{restaurantToEdit.priority}}">{{restaurantToEdit.priority}}</option>
            {{#each priority }}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>

    <label> Ambience:
        <select name="ambience">
            <option value="{{restaurantToEdit.ambience}}">{{restaurantToEdit.ambience}}</option>
            {{#each ambience }}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>

    <label> Vegan Menu:
        <select name="veganMenu">
            <option value="{{restaurantToEdit.veganMenu}}">{{restaurantToEdit.veganMenu}}</option>
            {{#each veganMenu }}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>

    <label> Gluten Free Options:
        <select name="glutenFree">
            <option value="{{restaurantToEdit.glutenFree}}">{{restaurantToEdit.glutenFree}}</option>
            {{#each glutenFree }}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </label>


    <label> Notes:
        <textarea rows="5" cols="40" name="notes" value="{{restaurantToEdit.notes}}">{{restaurantToEdit.notes}}</textarea>
    </label>

<form>
    <button type="submit"> Update restaurant </button>
</form>

